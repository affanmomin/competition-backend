{
  "name": "code-companion-node-ts-template",
  "version": "1.0.0",
  "description": "Template for fastify apps",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon -e ts,json,env --exec ts-node --files -r dotenv/config src/index.ts",
    "test": "LOG_LEVEL=error node -r ts-node/register --test src/**/*.test.ts",
    "lint": "biome lint src",
    "migrate": "ts-node -r dotenv/config src/migrate.ts",
    "docker:build": "docker build --build-arg PORT=3000 -t code-companion-node-ts-template .",
    "docker:run": "docker run -p  code-companion-node-ts-template",
    "worker": "node dist/workers/report.worker.js",
    "seed:schedules": "node dist/schedules/report.cron.js",
    "repeats:list": "node dist/utils/repeats.js list",
    "repeats:clear": "node dist/utils/repeats.js clear"
  },
  "keywords": [],
  "author": "companalysis",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@playwright/test": "^1.55.0",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "node-test-junit-reporter": "^2.0.1",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@browserbasehq/sdk": "^2.6.0",
    "@fastify/autoload": "^6.3.0",
    "@fastify/cors": "^10.0.1",
    "axios": "^1.12.2",
    "better-auth": "^1.3.11",
    "fastify": "^5.2.0",
    "bullmq": "^5.31.3",
    "ioredis": "^5.4.1",
    "@fastify/express": "^4.0.2",
    "@bull-board/api": "^6.0.2",
    "@bull-board/fastify": "^6.0.2",
    "@bull-board/ui": "^6.0.2",
    "pg": "^8.16.3",
    "playwright-core": "^1.55.0",
    "dotenv": "^16.5.0",
    "zod": "^3.22.4"
  }
}
